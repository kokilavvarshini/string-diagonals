#include <stdio.h>

int main()
{
   int i,j,n;
   char a[10],s;
   printf("enter the no of rows:");
   scanf("%d",&n);
   printf("enter the string:");
   scanf("%s",&a);
   for(i=0;i<n;i++)
   {
       for(j=0;j<n;j++)
       {
           if(i==j||j==n-(i+1))
           printf("%c ",a[i]);
           else
           printf("  ");
           
       }
       printf("\n");
   }

    return 0;
}
